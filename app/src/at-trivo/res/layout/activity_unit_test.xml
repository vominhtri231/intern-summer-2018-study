<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="asiantech.internship.summer.unittest.UnitTestActivity">

    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_round_rect_red"
        android:padding="10dp"
        android:textSize="@dimen/text_size_small"
        android:visibility="visible" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edt"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edt"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="@dimen/text_size_small" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/bttLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round_rect_fill_green"
            android:onClick="login"
            android:text="@string/action_log_in"
            android:textColor="@color/colorDesertStorm" />

        <TextView
            android:id="@+id/tvInstructorLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bttLogin"
            android:layout_marginTop="10dp"
            android:text="@string/instruction_social_log_in"
            android:textSize="@dimen/text_size_small" />

        <ImageButton
            android:id="@+id/bttGgLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInstructorLogin"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_round_rect_fill_orange"
            android:paddingBottom="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="0dp"
            android:src="@drawable/ic_ggplus" />

        <ImageButton
            android:id="@+id/bttFbLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInstructorLogin"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/bttGgLogin"
            android:background="@drawable/bg_round_rect_fill_blue"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_fb" />

        <TextView
            android:id="@+id/tvInstructorSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bttGgLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/instruction_sign_up"
            android:textColor="@color/colorShamrock"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInstructorSignUp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/instruction_forget_pass"
            android:textColor="@color/colorShamrock"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>
</LinearLayout>
