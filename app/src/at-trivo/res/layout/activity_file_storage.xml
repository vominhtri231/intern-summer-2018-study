<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="asiantech.internship.summer.file_storage.FileStorageActivity">

    <Button
        android:id="@+id/bttSharePreference"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/share_preference"
        android:onClick="onButtonClicked"/>

    <Button
        android:id="@+id/bttInternalAndExternal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bttSharePreference"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/internal_and_external_store"
        android:onClick="onButtonClicked"/>

    <Button
        android:id="@+id/bttDatabase"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bttInternalAndExternal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/database"
        android:onClick="onButtonClicked"/>
</RelativeLayout>
